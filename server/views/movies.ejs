    <p class="m-4 text-center underline decoration-pink-500"><%= data.tagline %></p>

    <div class="mb-6"> Top Cast </div>
    <div class="flex flex-wrap gap-4 justify-center sm:justify-start">
      <% for(i=0; i < 6; i++) { %>
      <a class="w-24 sm:w-32 rounded-xl overflow-hidden shadow-slate-500 shadow-lg my-5 transform translate-y-4 hover:translate-y-0 duration-500 ease-in-out" href="">
        <img alt="" src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2<%= credits.cast[i].profile_path %>">
        <div class="bg-orange-200 bg-opacity-70  h-full p-2 pt-1">
          <p class="text-xs sm:text-sm font-bold"><%= credits.cast[i].name %></p>
          <p class="text-xs"><%= credits.cast[i].character %></p>
        </div>
      </a>
      <% } %> 
    </div>

    <!-- carousel -->
    <p class="text-center text-2xl p-8">Önerilen Filmler</p>

    <div class="bg-slate-800 rounded-3xl w-4/6 m-auto sm:w-full flex ">
      <ul id="lightSlider" class="">
          <% recommendedMovies.results.forEach(item => { %>
              <li class="justify-start">
                  <img class=" ml-auto mr-auto rounded-xl sm:w-36 sm:mt-3 sm:mb-3" src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2<%= item.poster_path %>" alt="<%= data.title %>"> 
              </li> 
            <% }) %>
      </ul>
    </div>

</div>
