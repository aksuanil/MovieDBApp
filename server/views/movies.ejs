<script type="text/javascript">
    $(document).ready(function() {
      $("#lightSlider").lightSlider({
        item: 5,
        autoWidth: false,
        slideMove: 2, // slidemove will be 1 if loop is true
        easing: 'cubic-bezier(0.25, 0, 0.25, 1)',
        slideMargin: 0,
        enableTouch:true,

        speed: 400, //ms'
        auto: true,
        pauseOnHover: true,
        loop: true,
        slideEndAnimation: true,
        pause: 3000,
        responsive : [
        {
                breakpoint:1280,
                settings: {
                    item:4,
                    slideMove:1,
                    slideMargin:6,
                  }
            },
            {
                breakpoint:800,
                settings: {
                    item:2,
                    slideMove:1,
                    slideMargin:6,
                  }
            },
            {
                breakpoint:480,
                settings: {
                    item:1,
                    slideMove:1
                  }
            }
        ]
      }); 
    });
  </script>

