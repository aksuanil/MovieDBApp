          <img class="p-[1px]" src="https://www.themoviedb.org/t/p/w200<%= crew.director[0].url %>">
        </div>
        <div class="ml-2"> <%= crew.director[0]?.name %> </div>
      </div>
    </div>
    <div class="sm:ml-5 flex-row">
