<!DOCTYPE html>
<html lang="en">
<head>
  
  <link type="text/css" href="/server/public/css/output.css" rel="stylesheet">      


    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
</head>
<body>
  
    <%- include('_nav.ejs'); %>
    <div class="grid grid-cols-12 gap-2 bg-gray-900">
      <div class="col-span-2  mt-2">
        <%- include('_sidebar.ejs'); %>
      </div>
      <div class="col-span-10  mt-2 pt-6"  >
        <% data.forEach(data => { %>
            <div class="grid grid-cols-12 gap-2 mb-6 p-4 rounded-xl bg-slate-800 text-white">
                <img class="col-span-3 rounded-2xl" src="https://www.themoviedb.org/t/p/w300_and_h450_bestv2<%= data.poster_path %>" alt="<%= data.title %>"> 
                <div class="col-span-9 text-center">
                  <div class="text-center p-8">
                    <a class="text-2xl" href=/movies/<%= data.id %>> <%= data.title %> </a>
                  </div>
                    <p class="text-left p-8"><%= data.overview %></p>

                    <div class="grid grid-cols-8 text-center pt-8 ">
                        <div class="col-span-2 bg-gray-900 rounded-xl p-2 ml-2">
                            <p class="pb-2">Puan</p>
                            <p><%= data.vote_average %> <i class="fa-solid fa-signal"></i></p>
                        </div>
                        <div class="col-span-2 bg-gray-900 rounded-xl p-2 ml-4">
                            <p class="pb-2" >Oy Sayısı</p>
                            <p ><%= data.vote_count %></p>
                        </div>
                        <div class="col-span-2 bg-gray-900 rounded-xl p-2 ml-4">
                            <p class="pb-2">Vizyon Tarihi</p>
                            <p><%= data.release_date %></p>
                        </div>
                        <div class="col-span-2 bg-gray-900 rounded-xl p-2 ml-4">
                            <p class="pb-2">Tür</p>
                            <p>
                                <% data.genres.forEach(data => { %>
                                    <%= data.name %>
                                <% }) %>
                            </p>
                        </div>
                    </div>
                </div>
              </div>
          <% }) %>
            </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>



</html>